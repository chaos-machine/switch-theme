{
    "name": "switch_theme",
    "description": "Switch colour variables, symbols, overrides, layer styles and text styles",
    "author": "Tudor Teisanu <tudor703344@gmail.com>",
    "version": "2.3.0",
    "engines": {
        "sketch": ">=3.0"
    },
    "skpm": {
        "name": "Light/Dark Switch",
        "manifest": "src/manifest.json",
        "main": "switch-light-dark.sketchplugin",
        "assets": [
            "assets/**/*"
        ],
        "sketch-assets-file": "sketch-assets/icons.sketch"
    },
    "scripts": {
        "build": "skpm-build",
        "watch": "skpm-build --watch",
        "start": "skpm-build --watch --run",
        "postinstall": "npm run build && skpm-link"
    },
    "devDependencies": {
        "@skpm/builder": "^0.4.0",
        "@skpm/nib-loader": "^0.1.2",
        "appkit": "^1.0.1"
    },
    "dependencies": {
        "common-js": "^0.3.8",
        "sketch-toolbar-item": "^0.1.4"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/chaos-machine/switch-theme.git"
    }
}
